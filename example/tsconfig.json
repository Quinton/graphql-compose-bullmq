{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "../",
    "outDir": "./example/dist",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": ["node", "jest"]
  },
  "include": ["./example/src/**/*.ts", "./src"]
}
